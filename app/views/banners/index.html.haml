- content_for :the_banners_main do

  %h1 Список баннеров

  = link_to 'Создать баннер', new_banners_url, class: 'btn btn-default pull-right'

  %br

  %table.table
    %thead
      %tr
        %th Имя
        %th Slug
        %th Ссылка
        %th Ширина (пкс.)
        %th Высота (пкс.)
        %th Счётчик просмотров
        %th Счётчик кликов
        %th
        %th

    %tbody
      - @banners.each do |banner|
        - if banner.published?
          %tr.success
            %td= banner.name
            %td= banner.slug
            %td= banner.uri
            %td= banner.w
            %td= banner.h
            %td= banner.view_counter
            %td= banner.click_counter
            %td= link_to 'Правка', edit_banners_url(banner)
            %td= link_to 'Удалить', destroy_banners_url(banner), data: { confirm: 'Вы уверены?' }
        - else
          %tr.active
            %td= banner.name
            %td= banner.slug
            %td= banner.uri
            %td= banner.w
            %td= banner.h
            %td= banner.view_counter
            %td= banner.click_counter
            %td= link_to 'Правка', edit_banners_url(banner)
            %td= link_to 'Удалить', destroy_banners_url(banner), data: { confirm: 'Вы уверены?' }
